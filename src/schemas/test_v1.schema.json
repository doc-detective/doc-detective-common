{
  "title": "testObject",
  "type": "object",
  "properties": {
    "tests": {
      "type":"array",
      "minItems": 1,
      "items": {
        "oneOf": [
          {
            "title": "test",
            "type": "object",
            "description": "A Doc Detective test.",
            "properties": {
              "id": {
                "type": "string",
                "description": "Unique identifier for the test."
              },
              "saveFailedTestRecordings": {
                "type": "boolean",
                "description": "If `true`, saves recording of failed tests to the failed tests directory. Overrides `config` values."
              },
              "failedTestDirectory": {
                "type": "string",
                "description": "Path to the failed test directory. Overrides `config` values."
              },
              "actions": {
                "type": "array",
                "minItems": 1,
                "items": {
                  "oneOf": [
                    {
                      "$ref": "checkLink_v1.schema.json"
                    },
                    {
                      "$ref": "click_v1.schema.json"
                    },
                    {
                      "$ref": "find_v1.schema.json"
                    },
                    {
                      "$ref": "goTo_v1.schema.json"
                    },
                    {
                      "$ref": "httpRequest_v1.schema.json"
                    },
                    {
                      "$ref": "matchText_v1.schema.json"
                    },
                    {
                      "$ref": "moveMouse_v1.schema.json"
                    },
                    {
                      "$ref": "runShell_v1.schema.json"
                    },
                    {
                      "$ref": "screenshot_v1.schema.json"
                    },
                    {
                      "$ref": "scroll_v1.schema.json"
                    },
                    {
                      "$ref": "startRecording_v1.schema.json"
                    },
                    {
                      "$ref": "stopRecording_v1.schema.json"
                    },
                    {
                      "$ref": "type_v1.schema.json"
                    },
                    {
                      "$ref": "wait_v1.schema.json"
                    }
                  ]
                }
              }
            },
            "required": [
              "actions"
            ],
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "examples": [
    {
      "tests": [
        {
          "actions": [
            {
              "action": "click",
              "css": "#"
            },
            {
              "action": "checkLink",
              "uri": "https://www.google.com"
            }
          ]
        }
      ]
    }
  ]
}