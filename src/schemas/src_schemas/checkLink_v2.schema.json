{
  "title": "checkLink",
  "type": "object",
  "description": "Check if a URL returns an acceptable status code from a GET request.",
  "properties": {
    "id": {
      "type": "string",
      "description": "ID of the step."
    },
    "description": {
      "type": "string",
      "description": "Description of the step."
    },
    "action": {
      "type": "string",
      "const": "checkLink",
      "description": "Action to perform."
    },
    "url": {
      "type": "string",
      "description": "URL to check.",
      "pattern": "(^(http://|https://|/).*|\\$[A-Za-z0-9_]+)",
      "transform": ["trim"]
    },
    "origin": {
      "type": "string",
      "description": "Protocol and domain to navigate to. Prepended to `url`.",
      "transform": ["trim"]
    },
    "statusCodes": {
      "description": "Accepted status codes. If the specified URL returns a code other than what is specified here, the action fails.",
      "type": "array",
      "items": {
        "oneOf": [
          {
            "type": "integer"
          }
        ]
      },
      "default": [200, 201, 202]
    },
    "outputs": {
      "type": "object",
      "description": "Outputs from step processes and user-defined expressions. Use the `outputs` object to reference outputs in subsequent steps. If a user-defined output matches the key for a step-defined output, the user-defined output takes precedence.",
      "patternProperties": {
        "^[A-Za-z0-9_]+$": {
          "type": "string",
          "description": "Runtime expression for a user-defined output value."
        }
      },
      "properties": {
        "url": {
          "type": "string",
          "description": "URL of the request.",
          "readOnly": true
        },
        "method": {
          "type": "string",
          "description": "HTTP method of the request.",
          "readOnly": true
        },
        "statusCode": {
          "type": "integer",
          "description": "Status code of the response.",
          "readOnly": true
        },
        "request": {
          "type": "object",
          "description": "Request object.",
          "properties": {
            "header": {
              "type": "object",
              "description": "Request headers.",
              "readOnly": true
            },
            "query": {
              "type": "object",
              "description": "Request query parameters.",
              "readOnly": true
            },
            "path": {
              "type": "object",
              "description": "Request path parameters.",
              "readOnly": true
            },
            "body": {
              "type": "object",
              "description": "Request body.",
              "readOnly": true
            }
          }
        },
        "response": {
          "type": "object",
          "description": "Response object.",
          "properties": {
            "header": {
              "type": "object",
              "description": "Response headers.",
              "readOnly": true
            },
            "query": {
              "type": "object",
              "description": "Response query parameters.",
              "readOnly": true
            },
            "path": {
              "type": "object",
              "description": "Response path parameters.",
              "readOnly": true
            },
            "body": {
              "type": "object",
              "description": "Response body.",
              "readOnly": true
            }
          }
        }
      }
    }
  },
  "dynamicDefaults": {
    "id": "uuid"
  },
  "required": ["action", "url"],
  "additionalProperties": false,
  "examples": [
    {
      "action": "checkLink",
      "url": "https://www.google.com"
    },
    {
      "action": "checkLink",
      "url": "https://www.google.com",
      "statusCodes": [200]
    },
    {
      "action": "checkLink",
      "url": "/search",
      "origin": "www.google.com",
      "statusCodes": [200]
    }
  ]
}
